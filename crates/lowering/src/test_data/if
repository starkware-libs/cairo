Statements:
Drops: v4
End:
  Callsite(v1)

blk2:
Inputs: v0: core::bool, v1: core::felt
Statements:
  (v5: core::felt) <- match_enum(v0) {
    bool::True => blk0,
    bool::False => blk1,
