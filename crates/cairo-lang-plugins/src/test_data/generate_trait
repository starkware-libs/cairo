//! > Test expansion of generate_trait with one generic parameter.

//! > test_runner_name
test_expand_plugin(expect_diagnostics: false)

//! > cairo_code
/// Some doc.
#[generate_trait]
impl SomeImpl<T> of SomeTrait<T> {
    fn by_val(self: T) -> T {
        self
    }
    // With some doc.
    fn by_snap(self: @T) -> T {
        self
    }
    fn by_ref(ref a: T) {}
    fn with_mut(mut a: usize) {
        a += 1;
    }
    // With other doc.
    fn multi_val(ref a: T, b: T, c: @T) {}
    fn with_generics<V>(ref a: V, b: Box<T>, c: Box<V>) -> Box<(T, V)> {
        box::into_box((box::unbox(b), box::unbox(c)))
    }
    fn with_nopanic(self: T) -> T nopanic {
        self
    }
    fn with_implicits(self: T) -> T implicits(RangeCheck) {
        self
    }
}

//! > expanded_cairo_code
/// Some doc.
#[generate_trait]
impl SomeImpl<T> of SomeTrait<T> {
    fn by_val(self: T) -> T {
        self
    }
    // With some doc.
    fn by_snap(self: @T) -> T {
        self
    }
    fn by_ref(ref a: T) {}
    fn with_mut(mut a: usize) {
        a += 1;
    }
    // With other doc.
    fn multi_val(ref a: T, b: T, c: @T) {}
    fn with_generics<V>(ref a: V, b: Box<T>, c: Box<V>) -> Box<(T, V)> {
        box::into_box((box::unbox(b), box::unbox(c)))
    }
    fn with_nopanic(self: T) -> T nopanic {
        self
    }
    fn with_implicits(self: T) -> T implicits(RangeCheck) {
        self
    }
}
trait SomeTrait<T> {
    fn by_val(self: T) -> T;
    // With some doc.
    fn by_snap(self: @T) -> T;
    fn by_ref(ref a: T);
    fn with_mut(a: usize);
    // With other doc.
    fn multi_val(ref a: T, b: T, c: @T);
    fn with_generics<V>(ref a: V, b: Box<T>, c: Box<V>) -> Box<(T, V)>;
    fn with_nopanic(self: T) -> T nopanic;
    fn with_implicits(self: T) -> T implicits(RangeCheck);
}

