//! > Test closure simple.

//! > test_runner_name
test_partial_parser_tree(expect_diagnostics: false)

//! > cairo_code
fn test() {
    let expensive_closure = |num: u32, b, c: felt252| -> u32 {
        let x = num + 5;
        x
    };
}

