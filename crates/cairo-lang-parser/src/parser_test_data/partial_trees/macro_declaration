//! > ==========================================================================

//! > Test macro definition with several rules

//! > test_runner_name
test_partial_parser_tree(expect_diagnostics: false)

//! > cairo_code
macro macro_name {
    () => {
        2 + $placeholder
    };

    ($x:ident x + y) => {
        2 + $x
    };
}

//! > top_level_kind

//! > ignored_kinds

//! > expected_diagnostics

