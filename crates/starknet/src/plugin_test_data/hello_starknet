        super::balance::write(system, res + amount);
    }

    // Returns the current balance.
    #[view]
    fn get_balance(ref system: System) -> felt {
        super::balance::read(system)
    }
    mod __external {
        fn increase_balance(ref system: System, mut data: Array::<felt>) -> Array::<felt> {
            match get_gas() {
                Option::Some(_) => {
                },
                Option::None(_) => {
                    let mut data = array_new::<felt>();
                    array_append::<felt>(data, 'OOG');
                    panic(data);
                },
            }
            if array::array_len::<felt>(data) != 2_u128 {
                panic(array::array_new::<felt>());
            }
            let __arg_amount: felt = match array::array_at::<felt>(data, 0_u128) {
                Option::Some(x) => x,
                Option::None(()) => panic(array::array_new::<felt>()),
            };
            super::increase_balance(system, __arg_amount);
            let mut arr = array::array_new::<felt>();
            arr
        }
        fn get_balance(ref system: System, mut data: Array::<felt>) -> Array::<felt> {
            match get_gas() {
                Option::Some(_) => {
                },
                Option::None(_) => {
                    let mut data = array_new::<felt>();
                    array_append::<felt>(data, 'OOG');
                    panic(data);
                },
