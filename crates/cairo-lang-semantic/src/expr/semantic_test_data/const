const Y: u8 = X;

//! > expr_code
X + Y

//! > expected_semantics
FunctionCall(
    ExprFunctionCall {
        function: core::integer::U8Add::add,
        args: [
            Value(
                Constant(
                    ExprConstant {
                        const_value_id: 2,
                        ty: core::integer::u8,
                    },
                ),
            ),
            Value(
                Constant(
                    ExprConstant {
                        const_value_id: 2,
                        ty: core::integer::u8,
                    },
                ),
            ),
        ],
        coupon_arg: None,
        ty: core::integer::u8,
    },
)

