//! > ==========================================================================

//! > Test match with or pattern, with incompatible types for arm variables.

//! > test_runner_name
test_expr_semantics(expect_diagnostics: true)

//! > module_code
struct P {
    x: u8,
    y: u8,
    z: u8
}
enum MyEnum<T> {
    A: u8,
    B: (u8, u8),
    C: (T, u8, u8),
    D: P,
}

//! > function_body
