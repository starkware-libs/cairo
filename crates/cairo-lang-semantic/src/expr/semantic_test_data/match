test_expr_semantics(expect_diagnostics: true)

//! > module_code
struct P {
    x: u8,
    y: u8,
    z: u8
}
enum MyEnum<T> {
    A: felt252,
    B: (felt252, felt252),
    C: (T, u8, u8),
    D: P,
}

//! > function_body
