//! > Constructor

//! > test_runner_name
test_function_diagnostics(expect_diagnostics: true)

//! > function
#[cairofmt::skip]
fn foo(a: A) -> A {
    A {
        b: 1_felt252,
        a: 2,
        c: 7,
        a: 3,
        ..d,
        f: 4,
    }
}

//! > function_name
foo

//! > module_code
struct A {
    a: felt252,
    b: ()
}

