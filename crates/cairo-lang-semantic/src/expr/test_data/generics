//! > Test generic impl params usage

//! > test_function_name
test_function_diagnostics

//! > function
fn f(){}

//! > module_code
fn bar<T, impl GenericImpl: MyTrait::<T>>(x: T) {
    GenericImpl::foo(x);
    MyImpl::foo(4);
    MyTrait::foo(x);
    x.foo()
}

trait MyTrait<T> {
    fn foo(self: T);
}
impl MyImpl of MyTrait::<felt> {
    fn foo(self: felt) {
    }
}

trait AnotherTrait<T> {
    fn foo(self: T);
}
impl AnotherImpl of AnotherTrait::<felt> {
    fn foo(self: felt) {
    }
}

