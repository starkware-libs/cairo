 --> lib.cairo:2:24
    let _x: [u32; 2] = [1, 2, 3];
                       ^^^^^^^^^

error: Unexpected argument type. Expected: "[core::integer::u32; 2]", found: "[?3; 3]".
 --> lib.cairo:3:24
    let _x: [u32; 2] = [1; 3];
                       ^^^^^^

//! > ==========================================================================

//! > Test fixed size array illegal number of elements.

//! > test_runner_name
test_function_diagnostics(expect_diagnostics: true)

//! > function
fn foo() {
    let _x: [u32, u32; 2] = [1, 2];
    let _x: [; 2] = [1, 2];
    let _x: [u32; 2] = [1, 2; 2];
    let _x: [u32; 2] = [];
    let _x: [u32; 2] = [; 2];
}

//! > function_name
foo

//! > module_code

//! > expected_diagnostics
error: Fixed size array type must have exactly one type.
 --> lib.cairo:2:13
    let _x: [u32, u32; 2] = [1, 2];
            ^^^^^^^^^^^^^

error: Fixed size array type must have exactly one type.
 --> lib.cairo:3:13
    let _x: [; 2] = [1, 2];
            ^^^^^

error: Fixed size array with defined size must have exactly one value.
 --> lib.cairo:4:24
    let _x: [u32; 2] = [1, 2; 2];
                       ^^^^^^^^^

error: Unexpected argument type. Expected: "[core::integer::u32; 2]", found: "[?4; 0]".
 --> lib.cairo:5:24
    let _x: [u32; 2] = [];
                       ^^

error: Fixed size array with defined size must have exactly one value.
 --> lib.cairo:6:24
    let _x: [u32; 2] = [; 2];
                       ^^^^^

//! > ==========================================================================

//! > Test fixed size array illegal size.

//! > test_runner_name
test_function_diagnostics(expect_diagnostics: true)

//! > function
fn foo() {
    let _x: [u32; -1] = [1; -1];
    let _x: [u32; SIZE] = [1; SIZE];
    let _x: [u32; '1'] = [1; '1'];
    let _x: [u32; 32768] = [1; 32768];
}

//! > function_name
foo

//! > module_code
const SIZE: usize = 2;

//! > expected_diagnostics
