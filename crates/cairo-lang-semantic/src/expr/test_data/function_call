            ^

//! > ==========================================================================

//! > Unknown function

//! > test_runner_name
test_function_diagnostics

//! > function
fn foo(d: MyStruct) {
    bar(0);
    d + 0;
    - d;
    d.bar();
}

//! > function_name
foo

//! > module_code
struct MyStruct {
}

