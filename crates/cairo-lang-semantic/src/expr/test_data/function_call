//! > Unknown function

//! > test_runner_name
test_function_diagnostics(expect_diagnostics: true)

//! > function
fn foo(d: MyStruct) {
    bar(0);
    d + 0;
    -d;
    d.bar();
    d.baz();
}

//! > function_name
foo

//! > module_code
struct MyStruct {}

struct OtherStruct {}

trait MyTrait<T> {
    fn baz(self: T);
}
impl OtherStructImpl of MyTrait<OtherStruct> {
    fn baz(self: OtherStruct) {}
}

