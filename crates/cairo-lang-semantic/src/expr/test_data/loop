//! > ==========================================================================

//! > Error propagation inside a loop.

//! > test_runner_name
test_function_diagnostics(expect_diagnostics: false)

//! > function_code
fn foo() -> Option<bool> {
    loop {
        let res = Some(true);
        res?;
        break;
    }
    None
}

//! > function_name
foo

//! > module_code
use option::Option;

//! > expected_diagnostics

