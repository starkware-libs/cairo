//! > Incompatible types in loop breaks

//! > test_runner_name
test_function_diagnostics

//! > function
fn foo() {
    loop {
        if true {
            break true;
        } else {
            break 0;
        };
    };
}

//! > function_name
foo

//! > module_code

//! > expected_diagnostics
error: Trait has no implementation in context: core::integer::NumericLiteral::<core::bool>
 --> lib.cairo:6:19
            break 0;
                  ^

