//! > Incompatible types in if blocks.

//! > test_runner_name
test_function_diagnostics(expect_diagnostics: true)

//! > function
fn foo() {
    let x = 7_felt252;
    if x {
        true
    } else {
        0
    }
}

//! > function_name
foo

//! > module_code

//! > expected_diagnostics
error: If condition has type "core::felt252", expected bool.
 --> lib.cairo:3:8
    if x {
       ^

error: Unexpected return type. Expected: "()", found: "core::bool".
 --> lib.cairo:1:10
fn foo() {
         ^

error: Mismatched types. The type `core::bool` cannot be created from a numeric literal.
 --> lib.cairo:6:9
        0
        ^

//! > ==========================================================================

//! > Single sided if.

//! > test_runner_name
test_function_diagnostics(expect_diagnostics: true)

//! > function
fn foo() -> bool {
    let x = 7_u64;
    if x {
        return true;
    } else {
    }
    false
}

//! > function_name
foo

//! > module_code

//! > expected_diagnostics
