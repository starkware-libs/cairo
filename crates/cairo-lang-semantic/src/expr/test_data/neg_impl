foo

//! > module_code
trait MyTrait<T> {
    fn f(t: T) -> T;
}
impl MyImpl<T, -Drop<T>> of MyTrait<T> {
    fn f(t: T) -> T {
        t
    }
}

fn bar<T>(t: T) -> T {
    MyTrait::f(t)
}

