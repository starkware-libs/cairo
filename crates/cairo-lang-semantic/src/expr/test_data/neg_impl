//! > module_code
pub trait TypeEq<S, T> {}

trait MyTrait<T> {
    fn foo(self: T);
}
impl MyImpl<T, -TypeEq<T, u32>> of MyTrait<T> {
    fn foo(self: T) {}
}

fn bar<T>(a: T) {
    MyTrait::foo(a)
}

