//! > ==========================================================================

//! > Deconstruct + construct with different type (optimization does not apply).

//! > test_runner_name
test_return_optimizer

//! > function
fn foo(a: felt252, b: (felt252,)) -> FeltWrap {
    // create goto, since the return optimization works on block boundaries.
    let (value,) = match a {
        0 => b,
        _ => b,
    };

    FeltWrap { value }
}

//! > function_name
foo

//! > module_code
#[derive(Drop)]
struct FeltWrap {
    value: felt252,
}

