//! > ==========================================================================

//! > Test optimization with modified ref argument.

//! > test_runner_name
test_return_optimizer

//! > function
fn foo(ref a: MyStruct, v: Option<u16>) -> Option<u16> {
    match v {
        Some(x) => {
            a = MyStruct {};
            Some(x)
        },
        None => None,
    }
}

