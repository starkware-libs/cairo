//! > Test return optimizer simple scenario.

//! > test_runner_name
test_return_optimizer

//! > function
fn foo(ref a: (), v: Option<u16>) -> Option<u16> {
   match v {
        Option::Some(x) => { return Option::Some(x); },
        Option::None => { return Option::None; },
   }
}

