//! > ==========================================================================

//! > Test that the optimization is skipped if a ref argument is modified.

//! > test_runner_name
test_return_optimizer

//! > function
fn foo(ref a: (), v: Option<u16>) -> Option<u16> {
    match v {
        Some(x) => {
            a = ();
            return Some(x);
        },
        None => { return None; },
    }
}

