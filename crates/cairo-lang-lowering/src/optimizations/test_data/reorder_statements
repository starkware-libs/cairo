//! > ==========================================================================

//! > Check that not statements are moved to the right arm or removed.

//! > test_runner_name
test_reorder_statements

//! > function
fn foo() {
   let a = true;

   let b = !a;
   !!a;

   match get_option() {
        Option::Some(_) => a,
        Option::None => false ^ b,
   };
}

//! > function_name
foo

//! > module_code
extern fn get_option() -> Option<u16> nopanic;

