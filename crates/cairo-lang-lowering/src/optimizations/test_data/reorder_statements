  (v1: core::bool) <- bool::True(v0)
  (v2: core::felt252) <- 5
  (v3: ()) <- struct_construct()
  (v4: core::felt252) <- 3
  (v5: core::felt252) <- 8
End:
  Return(v5)

//! > after
