//! > ==========================================================================

//! > Test match inputs are moved next to the match.

//! > test_runner_name
test_reorder_statements

//! > function
fn foo() -> felt252 {
    let a = true;
    let v = 5;
    if a {
        v + 3
    } else {
        v + 3
    }
}

//! > function_name
foo

//! > module_code

//! > semantic_diagnostics

//! > lowering_diagnostics

