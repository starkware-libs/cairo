//! > Check that literals are moved to the right arm.

//! > test_runner_name
test_reorder_statements

//! > function
fn foo(x: felt252) -> felt252 {
    let opt = get_option();

    let _unused = 17;
    let _unused2 = ();

    let one = 1;
    let two = 2;
    let threex = 3 + x;

    match opt {
        Some(_) => one + two,
        None => {
            let four = 4;
            match opt {
                Some(_) => threex + four,
                None => one,
            }
        },
    }
}

//! > function_name
foo

//! > module_code
