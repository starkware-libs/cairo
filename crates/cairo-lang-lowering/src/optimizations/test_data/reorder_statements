//! > Check that literals are moved to the right arm.

//! > test_runner_name
test_reorder_statements

//! > function
fn foo() -> felt252 {
   let opt = get_option();

   let unused = 17;
   let unused2 = ();

   let one = 1;
   let two = 2;
   let three = 3;

   match opt {
        Option::Some(_) => one + two,
        Option::None(_) => {
            let four = 4;
            match opt {
                Option::Some(_) => three + four,
                Option::None(_) => one,
            }
        }
   }
}

//! > function_name
foo

