//! > ==========================================================================

//! > Test a function with a never argument

//! > test_runner_name
test_trim_unreachable

//! > function
fn foo(never_ty: NeverWithDrop, a: u32) {
    if a == 0 {
        let _b: u16 = a.try_into().unwrap_or(0);
    }

    match never_ty {}
}

