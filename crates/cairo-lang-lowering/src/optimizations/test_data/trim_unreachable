//! > Test match with never

//! > test_runner_name
test_trim_unreachable

//! > function
fn foo(x: Option<NeverWithDrop>, a: u32) {
    match x {
        Some(i_am_never) => {
            let _b: u16 = a.try_into().unwrap_or(0);
            match i_am_never {}
        },
        None => {},
    }
}

//! > function_name
foo

