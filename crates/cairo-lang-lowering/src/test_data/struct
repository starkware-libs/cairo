    MyStruct { c: f2(), a: (), b: f1(), }
}

//! > function_name
foo

//! > module_code
struct MyStruct {
    b: felt252,
    a: (),
    c: (felt252, felt252),
}
extern fn f1() -> felt252 nopanic;
extern fn f2() -> (felt252, felt252) nopanic;

