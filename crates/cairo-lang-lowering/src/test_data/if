//! > Test if x == y

//! > test_function_name
test_function_lowering

//! > function
fn foo(x: felt, y: felt, z: felt, w: felt) -> felt {
    if x + y == z - w {
        0
    } else {
        1
    }
}

//! > function_name
foo

