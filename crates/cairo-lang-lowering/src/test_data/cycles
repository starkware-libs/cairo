//! > ==========================================================================

//! > Test destructor basic cycle.

//! > test_runner_name
test_function_lowering

//! > function
fn foo() {}

//! > function_name
foo

//! > module_code
struct A {}
impl ADestruct of Destruct<A> {
    fn destruct(self: A) nopanic {
        let A { } = self;
        B {};
    }
}

struct B {}
impl BDestruct of Destruct<B> {
    fn destruct(self: B) nopanic {
        let B { } = self;
        A {};
    }
}

