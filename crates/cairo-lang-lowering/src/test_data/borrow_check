//! > ==========================================================================

//! > Borrow checking with panic

//! > test_function_name
test_function_lowering

//! > function
fn foo(ref x: ADrop, y: ADrop) {
  use_a_drop(x);
  bar();
  x = y;
}

fn bar(){
  let mut data = array_new::<felt>();
  array_append::<felt>(ref data, 1);
  panic(data);
}

//! > function_name
foo

//! > module_code
