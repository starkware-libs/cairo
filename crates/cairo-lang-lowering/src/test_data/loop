//! > Test loop.

//! > test_runner_name
test_function_lowering

//! > function
fn foo() -> bool {
    loop {
        // Some statements to prevent the loop function from being inlined.
        let mut x = 0;
        x += 1;
        x += 1;
        x += 1;
        x += 1;
        x += 1;
        x += 1;
        x += 1;
        x += 1;
        break true;
    }
}

