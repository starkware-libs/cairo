//! > Test component flat path check.

//! > test_runner_name
test_storage_path_check(expect_diagnostics: true)

//! > cairo_code
#[starknet::storage_node]
struct HasA {
    a: felt252,
}

#[starknet::storage_node]
struct HasHasA {
    #[flat]
    has_a: HasA,
}

#[starknet::component]
mod component_with_and_without_ignored {
    use super::HasA;
    use super::HasHasA;
    #[storage]
    pub struct Storage {
        pub a: felt252,
        #[flat]
        pub has_a: HasA,
        #[flat]
        pub has_has_a: HasHasA,
    }
}

