[1;33m|   [0mfn __validate_deploy__(
[1;33m|   [0mself: @ContractState,
[1;33m|   [0mclass_hash: felt252,
[1;33m|   [0mcontract_address_salt: felt252,
[1;33m|   [0mparam_a: starknet::ClassHash,
[1;33m|   [0mparam_b: Array<u8>,
[1;33m|   [0m) {}
