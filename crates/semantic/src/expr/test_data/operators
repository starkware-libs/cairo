//! > Test unexpected argument types for operators.

//! > test_function_name
test_function_diagnostics

//! > function
func foo(a: MyType) {
    a + a * a;
}

//! > function_name
foo

//! > module_code
extern type MyType;

//! > expected_diagnostics
error: Binary operator '*' is not supported for types 'test::MyType' and 'test::MyType'.
 --> lib.cairo:3:11
    a + a * a;
          ^

//! > ==========================================================================

//! > Test operators.

//! > test_function_name
test_function_diagnostics

//! > function
func foo(a: felt, b: bool) implicits(RangeCheck) {
    // Valid.
    a + a * a - a;
    b & b | b & (a == a | a > a)
    & (a<a) & (a<=a) & (a>=a);
    // Errors.
    a>a>a;
    a - b
}

//! > function_name
foo

//! > module_code

//! > expected_diagnostics
error: Binary operator '>' is not supported for types 'core::bool' and 'core::felt'.
 --> lib.cairo:7:8
    a>a>a;
       ^

error: Binary operator '-' is not supported for types 'core::felt' and 'core::bool'.
 --> lib.cairo:8:7
    a - b
      ^

//! > ==========================================================================

//! > Test unary operators.

//! > test_function_name
test_function_diagnostics

//! > function
func foo() {
    -(1 == 2);
    !17;
}

//! > function_name
foo

//! > module_code

//! > expected_diagnostics
error: Unary operator '-' is not supported for type 'core::bool'.
 --> lib.cairo:2:5
    -(1 == 2);
    ^

error: Unary operator '!' is not supported for type 'core::felt'.
 --> lib.cairo:3:5
    !17;
    ^
