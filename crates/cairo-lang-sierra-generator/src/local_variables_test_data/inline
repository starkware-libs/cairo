//! > ==========================================================================

//! > Remapping - fallthrough without incoming gotos

//! > test_runner_name
check_find_local_variables

//! > function_name
foo

//! > function_code
fn foo(x: felt252) -> felt252 {
    let y = bar(x + 1);
    revoke_ap();
    y
}

//! > module_code
#[inline(always)]
fn bar(x: felt252) -> felt252 {
    x
}

// Revokes ap since this function is recursive.
fn revoke_ap() {
    revoke_ap()
}

