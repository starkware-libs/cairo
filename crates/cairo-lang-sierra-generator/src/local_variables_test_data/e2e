//! > Test locals with if

//! > test_runner_name
test_function_generator

//! > function
fn foo() -> felt {
    let a = revoke_ap();
    let x = if true { 1 } else { revoke_ap() };
    revoke_ap();
    a + x
}

//! > function_name
foo

