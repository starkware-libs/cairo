//! > Test locals with if

//! > test_runner_name
test_function_generator

//! > function
fn foo(b: bool) -> felt252 {
    let a = revoke_ap();
    let x = if b {
        1
    } else {
        revoke_ap()
    };
    revoke_ap();
    a + x
}

