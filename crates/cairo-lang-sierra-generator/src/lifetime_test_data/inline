//! > ==========================================================================

//! > Test variable lifetime with local variables

//! > test_runner_name
check_variable_lifetime

//! > function_name
foo

//! > function_code
fn foo(x: felt252) -> felt252 {
   bar(x)
}

//! > module_code
#[inline(always)]
fn bar(x: felt252) -> felt252 {
    if x == 0 {
        x
    } else {
        let a = x + x;
        // The call will force `a` to be a local variable.
        revoke_tempvars();
        a
    }
}

fn revoke_tempvars() {
  revoke_tempvars()
}

