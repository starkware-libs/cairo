//! > ==========================================================================

//! > Test variable lifetime with local variables

//! > test_function_name
check_variable_lifetime

//! > function_name
foo

//! > function_code
fn foo(x: felt) -> felt {
   bar(x)
}

//! > module_code
#[inline(always)]
fn bar(x: felt) -> felt {
    if x == 0 {
        x
    } else {
        let a = x + x;
        // The call will force `a` to be a local variable.
        revoke_tempvars();
        a
    }
}

fn revoke_tempvars() {
  revoke_tempvars()
}

