//! > ==========================================================================

//! > Test inlining a function where the root block does not return.

//! > test_runner_name
test_function_generator

//! > function_name
foo

//! > function
fn foo(n: felt) -> felt {
  bar(n)
}

//! > module_code
#[inline(always)]
fn bar(n: felt) -> felt {
  if n == 0 {
    return 1;
  } else {
    return 1;
  }
}

